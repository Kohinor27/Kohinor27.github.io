// ===== Intro Page =====
const intro = document.getElementById('intro');
const quizPage = document.getElementById("quizPage");
document.getElementById("begin").addEventListener("click", () => {
    intro.classList.add("hidden");
    quizPage.classList.remove("hidden");
});

